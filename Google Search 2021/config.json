{
    "name" : "Google Search 2021",
    "author" : "Eric Turner | Originally by Mark Sinteur",
    "size" : {
        "max-width" : "500px",
        "width" : "90%",
        "height" : "60px"
    },
    "options":[
        {
            "text":"Search Bar Border Radius (px)",
            "default": 3.0,
            "type":"slider",
            "min": 2.0,
            "max": 25.0,
            "key": "radius"
        },
        {
            "text": "Logo",
            "type": "option",
            "default": "Google",
            "key": "image",
            "options": [
               {
                "text": "G",
                "value": "url('g.png')"
               },
               {
                "text": "Google",
                "value": "url('google.png')"
               }  
            ]
        },
        {
            "text": "Say 'Ok Google' Label",
            "type": "option",
            "default": "Off",
            "key": "label",
            "options": [
               {
                "text": "On",
                "value": "Say \"Ok Google\""
               },
               {
                "text": "Off",
                "value": "None"
               }  
            ]
        },
        {
            "text": "Search Engine",
            "type": "option",
            "default": "Google",
            "key": "engine",
            "options": [
               {
                "text": "Google",
                "value": "https://www.google.com/search?q="
               },
               {
                "text": "DuckDuckGo",
                "value": "https://duckduckgo.com/?q="
               },
               {
                "text": "Ecosia",
                "value": "https://www.ecosia.org/search?q="
               },
               {
                "text": "Bing",
                "value": "https://www.bing.com/search?q="
               }    
            ]
        },
        {
            "text": "Voice Assistant",
            "type": "option",
            "default": "Google",
            "key": "voice",
            "options": [
               {
                "text": "Google",
                "value": "com.google.OPA"
               },
               {
                "text": "Alexa",
                "value": "com.amazon.echo"
               }   
            ]
        },
        {
            "text":"Opacity",
            "default": 1.0,
            "type":"slider",
            "min": 0.1,
            "max": 1.0,
            "key": "opacity"
        }
    ]
}